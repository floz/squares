@import "nib"

html, body
  background-color #f0f
  margin 0
  padding 0
  width 100%
  height 100%
  position relative

size = 50px
cols = 5

#game
  position absolute
  background-color #00f
  width size * cols
  height size * cols
  left 50%
  bottom 50px
  transform translateX( -50% )

.elt
  position relative
  width size
  height size
  transform-origin 50% 50%

.elt-desc
  position absolute
  left 50%
  top 50%
  transform-origin 50% 50%
  transform translateX( -50% ) translateY( -50% )

.elt-desc--arrow
  s = size / 8
  border-top s solid transparent
  border-bottom s solid transparent
  border-left s solid #000
  margin-left - (s / 2)
  margin-top - (s / 2) - 1px

.elt-desc--circle
  width (size / 2)
  height (size / 2)
  border-radius (size / 2)

.square
  z-index 1

.square--a
  background-color #f00  

.goal--a .elt-desc
  background-color #f00  